rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own houses
    match /houses/{houseId} {
      allow read: if true; // Allow anyone to read houses (for tenants to browse)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.landlordId;
      allow update: if request.auth != null && request.auth.uid == resource.data.landlordId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.landlordId;
    }

    // Allow authenticated users to manage their own user documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write messages
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // House status updates (written by backend via Admin SDK; readable by clients)
    match /house_status_updates/{docId} {
      allow read: if true; // public read for live status
      allow write: if false; // writes only via Admin SDK (bypasses rules)
    }
  }
}